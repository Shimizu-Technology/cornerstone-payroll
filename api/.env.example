# Cornerstone Payroll - Environment Variables Template
# Copy to .env and fill in values

# ===================
# WorkOS Authentication
# ===================
WORKOS_CLIENT_ID=client_xxx
WORKOS_API_KEY=sk_test_xxx
WORKOS_REDIRECT_URI=http://localhost:5173/callback

# ===================
# Cloudflare R2 Storage (for pay stub PDFs)
# ===================
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_BUCKET_NAME=cornerstone-payroll
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com

# ===================
# Database
# ===================
DATABASE_URL=postgres://localhost:5432/cornerstone_payroll_development

# ===================
# Rails
# ===================
RAILS_ENV=development
SECRET_KEY_BASE=dev-secret-key-change-in-production

# ===================
# Active Record Encryption (for SSN)
# ===================
# Generate with: rails db:encryption:init
# Then paste the 3 values below
ACTIVE_RECORD_ENCRYPTION_PRIMARY_KEY=your_primary_key_here
ACTIVE_RECORD_ENCRYPTION_DETERMINISTIC_KEY=your_deterministic_key_here
ACTIVE_RECORD_ENCRYPTION_KEY_DERIVATION_SALT=your_salt_here
